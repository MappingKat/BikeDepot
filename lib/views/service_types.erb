<body>
<div id="top" class="header">

<h1 style="text-align: center">Types of Services</h1></br>
<div style="clear: both;">
  <div class="col-ls-4">
<% if authorized? %>
    <form action='/service_types' method='POST'>
      <label form="service_type[name]">Service Type:</label>
      <textarea name='service_type[name]'></textarea></br>
      <button type='submit' name='create_service_type'>Submit</button>
    </form>
    <ul>
      <% service_types.each do |service_type| %>
        <li>
        <%= service_type.name %><br/>
        <form action="/service_types/<%= service_type.id %>/edit" method='GET'>
          <button type='submit' name='edit service types'>Edit</button>
        </form>

        <form action= "/service_types/<%= service_type.id %>/delete" method='POST'>
        <input type="hidden" name="_method" value="DELETE">
        <input type='submit' value="delete"/>
        </form>
        </li> 
      <% end %>
     </ul>

  <% else %>
    <ul>
      <% service_types.each do |service_type| %>
        <li>
        <%= service_type.name %><br/>
                <%= service_type.id %>
        </li>
      <% end %>
    </ul>

  <% end %>

